---
/**
 * Author bio block - Healthline style (end of article)
 */
import { Icon } from 'astro-icon/components';

export interface Props {
  author?: string;
  bio?: string;
}

const {
  author = 'SleepUpgradeHub Team',
  bio = 'Our team combines sleep science expertise, product testing, and real-world experience to bring you evidence-based sleep optimization strategies that actually work.'
} = Astro.props;
---

<div class="py-8 border-t border-gray-200">
  <div class="flex items-start gap-5 bg-gray-50 rounded-xl p-6 md:p-8">
    <div class="flex-shrink-0">
      <div class="w-16 h-16 md:w-20 md:h-20 rounded-full bg-gradient-to-br from-brand-primary to-brand-accent text-white flex items-center justify-center text-2xl md:text-3xl font-bold shadow-lg">
        {author.charAt(0).toUpperCase()}
      </div>
    </div>
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <h3 class="text-lg md:text-xl font-bold text-gray-900">
          {author}
        </h3>
        <Icon name="tabler:circle-check" class="w-5 h-5 text-brand-accent" />
      </div>
      <p class="text-sm md:text-base text-gray-700 leading-relaxed mb-3">
        {bio}
      </p>
      <div class="flex items-center gap-4 text-xs text-gray-500">
        <span class="flex items-center gap-1">
          <Icon name="tabler:article" class="w-4 h-4" />
          Sleep Expert
        </span>
        <span class="flex items-center gap-1">
          <Icon name="tabler:certificate" class="w-4 h-4" />
          Verified Author
        </span>
      </div>
    </div>
  </div>
</div>
