---
import { Icon } from 'astro-icon/components';

import Image from '~/components/common/Image.astro';
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import Schema from '~/components/common/Schema.astro';

import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';

import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;

// Generate Article Schema
const articleSchema = {
  headline: post.title,
  description: post.excerpt || '',
  datePublished: post.publishDate.toISOString(),
  dateModified: (post.updatedDate || post.publishDate).toISOString(),
  author: post.author || 'SleepUpgradeHub',
  image: post.image ? String(url).replace(/\/[^\/]+$/, '') + post.image : undefined,
  url: String(url),
};
---

<!-- Article Schema for SEO -->
<Schema type="article" article={articleSchema} />

<section class="relative pb-16 pt-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <article class="relative">
      <!-- Article Header -->
      <header class="mb-8 md:mb-12 text-center max-w-4xl mx-auto">
        <!-- Breadcrumbs / Category -->
        {post.category && (
          <div class="mb-6">
            <a
              href={getPermalink(post.category.slug, 'category')}
              class="inline-flex items-center gap-2 px-4 py-2 bg-brand-accent text-white rounded-full font-medium text-sm uppercase tracking-wide hover:bg-brand-primary transition"
            >
              <Icon name="tabler:folder" class="w-4 h-4" />
              {post.category.title}
            </a>
          </div>
        )}

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight tracking-tight mb-6 text-gray-900 dark:text-white">
          {post.title}
        </h1>

        <!-- Excerpt -->
        {post.excerpt && (
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-3xl mx-auto">
            {post.excerpt}
          </p>
        )}

        <!-- Meta Info -->
        <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6 mt-8 text-sm text-gray-600 dark:text-gray-400">
          <div class="flex items-center gap-2">
            <Icon name="tabler:calendar" class="w-4 h-4" />
            <time datetime={String(post.publishDate)}>{getFormattedDate(post.publishDate)}</time>
          </div>
          {post.author && (
            <div class="flex items-center gap-2">
              <Icon name="tabler:user" class="w-4 h-4" />
              <span>{post.author}</span>
            </div>
          )}
          {post.readingTime && (
            <div class="flex items-center gap-2">
              <Icon name="tabler:clock" class="w-4 h-4" />
              <span>{post.readingTime} min read</span>
            </div>
          )}
        </div>

        <!-- Social Share Bar -->
        <div class="mt-8 flex items-center justify-center gap-4">
          <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Share:</span>
          <SocialShare
            url={url}
            text={post.title}
            class="flex items-center gap-2"
          />
        </div>
      </header>

      <!-- Featured Image -->
      {post.image && (
        <div class="mb-12 md:mb-16 rounded-2xl overflow-hidden shadow-2xl max-w-5xl mx-auto">
          <Image
            src={post.image}
            class="w-full h-auto object-cover"
            widths={[400, 768, 1024, 1280]}
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 768px, 1280px"
            alt={post.title}
            loading="eager"
            decoding="async"
          />
        </div>
      )}

      <!-- Article Content -->
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 max-w-7xl mx-auto">
        <!-- Main Content -->
        <div class="lg:col-span-8">
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-8 md:p-12">
            <div
              class="prose prose-lg md:prose-xl dark:prose-invert max-w-none
                     prose-headings:font-bold prose-headings:tracking-tight prose-headings:text-gray-900 dark:prose-headings:text-white
                     prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6 prose-h2:pb-3 prose-h2:border-b prose-h2:border-gray-200 dark:prose-h2:border-slate-700
                     prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4
                     prose-p:text-gray-700 dark:prose-p:text-gray-300 prose-p:leading-relaxed prose-p:mb-6
                     prose-a:text-brand-accent prose-a:no-underline hover:prose-a:underline prose-a:font-medium
                     prose-strong:text-gray-900 dark:prose-strong:text-white prose-strong:font-semibold
                     prose-ul:my-6 prose-ol:my-6 prose-li:my-2 prose-li:text-gray-700 dark:prose-li:text-gray-300
                     prose-blockquote:border-l-4 prose-blockquote:border-brand-accent prose-blockquote:bg-blue-50 dark:prose-blockquote:bg-slate-700/50
                     prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:my-8 prose-blockquote:rounded-r-lg prose-blockquote:not-italic
                     prose-blockquote:text-gray-700 dark:prose-blockquote:text-gray-300 prose-blockquote:font-medium
                     prose-code:text-brand-accent prose-code:bg-gray-100 dark:prose-code:bg-slate-700 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:font-mono prose-code:before:content-none prose-code:after:content-none
                     prose-pre:bg-gray-900 prose-pre:text-gray-100 prose-pre:rounded-xl prose-pre:shadow-lg
                     prose-img:rounded-xl prose-img:shadow-xl prose-img:my-8
                     prose-hr:border-gray-300 dark:prose-hr:border-slate-700 prose-hr:my-12
                     prose-table:border-collapse prose-th:bg-gray-100 dark:prose-th:bg-slate-700 prose-th:p-3 prose-td:p-3 prose-td:border prose-td:border-gray-300 dark:prose-td:border-slate-600"
            >
              <slot />
            </div>

            <!-- Tags -->
            {post.tags && post.tags.length > 0 && (
              <div class="mt-12 pt-8 border-t border-gray-200 dark:border-slate-700">
                <h3 class="text-lg font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
                  <Icon name="tabler:tags" class="w-5 h-5" />
                  Topics Covered
                </h3>
                <PostTags tags={post.tags} />
              </div>
            )}

            <!-- Author Box -->
            <div class="mt-12 p-6 md:p-8 bg-gradient-to-br from-brand-primary/10 to-brand-accent/10 dark:from-brand-primary/20 dark:to-brand-accent/20 rounded-xl border-2 border-brand-accent/30">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="w-16 h-16 rounded-full bg-brand-accent text-white flex items-center justify-center text-2xl font-bold">
                    {post.author ? post.author.charAt(0).toUpperCase() : 'S'}
                  </div>
                </div>
                <div class="flex-1">
                  <h4 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">
                    {post.author || 'SleepUpgradeHub Team'}
                  </h4>
                  <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    Our team combines sleep science expertise, product testing, and real-world experience to bring you evidence-based sleep optimization strategies that actually work.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar (Sticky TOC & Share) -->
        <div class="lg:col-span-4">
          <div class="lg:sticky lg:top-24 space-y-6">
            <!-- Share Card -->
            <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg p-6">
              <h3 class="text-lg font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
                <Icon name="tabler:share" class="w-5 h-5 text-brand-accent" />
                Share This Guide
              </h3>
              <SocialShare
                url={url}
                text={post.title}
                class="flex flex-col gap-3"
              />
            </div>

            <!-- Related Topics -->
            {post.tags && post.tags.length > 0 && (
              <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
                  <Icon name="tabler:bookmark" class="w-5 h-5 text-brand-accent" />
                  Related Topics
                </h3>
                <div class="flex flex-wrap gap-2">
                  {post.tags.slice(0, 5).map((tag) => (
                    <a
                      href={getPermalink(tag.slug, 'tag')}
                      class="inline-block px-3 py-1 bg-gray-100 dark:bg-slate-700 hover:bg-brand-accent hover:text-white dark:hover:bg-brand-accent rounded-full text-sm font-medium transition"
                    >
                      #{tag.title || tag.slug}
                    </a>
                  ))}
                </div>
              </div>
            )}

            <!-- CTA Card -->
            <div class="bg-gradient-to-br from-brand-primary to-brand-accent rounded-xl shadow-lg p-6 text-white">
              <Icon name="tabler:moon-stars" class="w-10 h-10 mb-4" />
              <h3 class="text-xl font-bold mb-3">
                Want Better Sleep?
              </h3>
              <p class="text-blue-100 mb-4 text-sm">
                Get our weekly newsletter with science-backed sleep tips delivered to your inbox.
              </p>
              <a
                href="/contact"
                class="inline-block w-full px-4 py-3 bg-white text-brand-primary rounded-lg font-semibold text-center hover:bg-blue-50 transition"
              >
                Subscribe Now
              </a>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</section>
