---
/**
 * Related reads section - Healthline style (end of article)
 */
import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';
import Image from '~/components/common/Image.astro';
import { Icon } from 'astro-icon/components';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts = [] } = Astro.props;
---

{posts.length > 0 && (
  <section class="py-12 md:py-16 border-t border-gray-200 dark:border-slate-700">
    <div class="mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2">
        Related Reads
      </h2>
      <p class="text-gray-600 dark:text-gray-300">
        Continue exploring sleep optimization
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {posts.slice(0, 3).map((post) => (
        <article class="group bg-white dark:bg-slate-800 rounded-lg border border-gray-200 dark:border-slate-700 overflow-hidden hover:shadow-lg hover:border-brand-accent dark:hover:border-brand-accent transition-all duration-200">
          <a href={getPermalink(post.permalink, 'post')} class="block">
            {post.image && (
              <div class="aspect-video overflow-hidden bg-gray-100 dark:bg-slate-700">
                <Image
                  src={post.image}
                  alt={post.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  widths={[400, 768]}
                  sizes="(max-width: 768px) 100vw, 400px"
                  loading="lazy"
                />
              </div>
            )}
            <div class="p-5">
              {post.category && (
                <span class="inline-block text-xs font-semibold text-brand-accent uppercase tracking-wide mb-2">
                  {post.category.title}
                </span>
              )}
              <h3 class="text-base font-bold text-gray-900 dark:text-white mb-2 group-hover:text-brand-accent transition line-clamp-2">
                {post.title}
              </h3>
              <div class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-500">
                <Icon name="tabler:clock" class="w-3.5 h-3.5" />
                <span>{post.readingTime || '5'} min read</span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </section>
)}
