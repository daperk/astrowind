---
/**
 * Compact, Healthline-style hero - text-first, minimal height
 */
export interface Props {
  title?: string;
  subtitle?: string;
  eyebrow?: string;
}

const { title, subtitle, eyebrow } = Astro.props;
---

<section class="relative bg-white dark:bg-slate-900 border-b border-gray-200 dark:border-slate-800">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    <div class="max-w-3xl">
      {eyebrow && (
        <p class="text-sm font-semibold text-brand-accent uppercase tracking-wide mb-3">
          {eyebrow}
        </p>
      )}
      {title && (
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4 leading-tight">
          <Fragment set:html={title} />
        </h1>
      )}
      {subtitle && (
        <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</section>
