---
/**
 * ProductRecommendations component
 *
 * Reusable component to display product recommendations for any category.
 * Can be used on blog category pages, hub pages, or individual blog posts.
 *
 * Usage:
 * <ProductRecommendations
 *   title="Recommended Sleep Trackers"
 *   description="Our top picks based on extensive testing"
 *   products={[...]}
 * />
 */

interface Product {
  name: string;
  description: string;
  image?: string;
  price?: string;
  rating?: number;
  features?: string[];
  affiliateLink: string;
  badge?: string; // e.g., "Best Overall", "Budget Pick", "Premium Choice"
}

interface Props {
  title?: string;
  description?: string;
  products?: Product[];
  columns?: 2 | 3;
  tagline?: string;
}

const {
  title = 'Recommended Products',
  description = 'Our top picks based on extensive testing and research',
  products = [],
  columns = 3,
  tagline = 'Top Picks',
} = Astro.props;
---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl bg-gray-50 dark:bg-slate-900/50">
  <!-- Section Header -->
  <div class="mb-12 max-w-3xl mx-auto text-center">
    {tagline && (
      <p class="text-sm font-semibold uppercase tracking-wider text-brand-accent dark:text-brand-accent-light mb-3">
        {tagline}
      </p>
    )}
    <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-4 text-gray-900 dark:text-white">
      {title}
    </h2>
    {description && (
      <p class="text-xl text-muted dark:text-slate-400">
        {description}
      </p>
    )}
  </div>

  <!-- Product Grid -->
  <div class={`grid grid-cols-1 gap-8 ${columns === 2 ? 'md:grid-cols-2' : 'md:grid-cols-2 lg:grid-cols-3'}`}>
    {products.map((product) => (
      <article class="group bg-white dark:bg-slate-800 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden flex flex-col">
        <!-- Badge -->
        {product.badge && (
          <div class="bg-brand-accent text-white text-xs font-bold uppercase tracking-wider px-3 py-2 text-center">
            {product.badge}
          </div>
        )}

        <!-- Product Image -->
        {product.image && (
          <div class="relative h-48 bg-gray-200 dark:bg-slate-700 overflow-hidden">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </div>
        )}

        <!-- Product Content -->
        <div class="p-6 flex flex-col flex-grow">
          <!-- Product Name -->
          <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white group-hover:text-brand-accent dark:group-hover:text-brand-accent-light transition-colors">
            {product.name}
          </h3>

          <!-- Rating -->
          {product.rating && (
            <div class="flex items-center gap-1 mb-3">
              {[...Array(5)].map((_, i) => (
                <svg
                  class={`w-5 h-5 ${i < product.rating! ? 'text-yellow-400' : 'text-gray-300 dark:text-gray-600'}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
              <span class="ml-2 text-sm text-gray-600 dark:text-gray-400">
                {product.rating}/5
              </span>
            </div>
          )}

          <!-- Description -->
          <p class="text-muted dark:text-slate-400 mb-4">
            {product.description}
          </p>

          <!-- Key Features -->
          {product.features && product.features.length > 0 && (
            <ul class="space-y-2 mb-4 text-sm">
              {product.features.slice(0, 3).map((feature) => (
                <li class="flex items-start gap-2 text-gray-700 dark:text-gray-300">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          )}

          <!-- Price and CTA -->
          <div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between">
            {product.price && (
              <span class="text-2xl font-bold text-gray-900 dark:text-white">
                {product.price}
              </span>
            )}
            <a
              href={product.affiliateLink}
              target="_blank"
              rel="noopener noreferrer sponsored"
              class="inline-flex items-center gap-2 px-4 py-2 bg-brand-accent hover:bg-brand-accent/90 text-white rounded-lg font-semibold transition-colors text-sm"
            >
              View Product
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      </article>
    ))}
  </div>

  <!-- Disclosure -->
  <div class="mt-8 text-center">
    <p class="text-sm text-gray-600 dark:text-gray-400">
      <strong>Disclosure:</strong> We may earn a commission if you purchase through our links, at no additional cost to you. This helps support our research and content creation.
    </p>
  </div>
</section>
