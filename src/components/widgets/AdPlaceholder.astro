---
/**
 * Ad placeholder slots - for future ad integration
 */
export interface Props {
  type?: 'horizontal' | 'sidebar';
  label?: string;
}

const { type = 'horizontal', label = 'Advertisement' } = Astro.props;
---

{type === 'horizontal' && (
  <div class="py-8 md:py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="bg-gray-100 rounded-lg border-2 border-dashed border-gray-300 p-8 text-center">
        <p class="text-xs uppercase tracking-wide text-gray-500 mb-2">
          {label}
        </p>
        <div class="h-24 flex items-center justify-center">
          <p class="text-sm text-gray-400">
            Ad slot placeholder (728x90 or responsive)
          </p>
        </div>
      </div>
    </div>
  </div>
)}

{type === 'sidebar' && (
  <div class="bg-gray-100 rounded-lg border-2 border-dashed border-gray-300 p-6 text-center">
    <p class="text-xs uppercase tracking-wide text-gray-500 mb-2">
      {label}
    </p>
    <div class="h-64 flex items-center justify-center">
      <p class="text-sm text-gray-400">
        Sidebar ad<br />(300x250)
      </p>
    </div>
  </div>
)}
