---
import NewsletterForm from '~/components/common/NewsletterForm.astro';

const { delay = 0 } = Astro.props;
const storageKey = 'newsletter_popup_dismissed';
---

<div
  data-newsletter-popup
  data-popup-delay={delay}
  data-popup-storage={storageKey}
  class="fixed inset-0 z-40 hidden items-center justify-center px-4"
>
  <div data-popup-overlay class="absolute inset-0 bg-slate-900/80"></div>
  <div class="relative w-full max-w-4xl rounded-2xl bg-white border border-gray-200 shadow-2xl overflow-hidden">
    <div class="grid gap-0 md:grid-cols-[1.05fr_0.95fr] items-stretch">
      <div class="relative bg-gradient-to-br from-slate-50 to-white p-8 md:p-10">
        <div class="mb-4 inline-flex items-center gap-2 rounded-full border border-gray-200 bg-white px-3 py-1 text-xs font-semibold text-gray-700">
          <span class="inline-flex h-5 w-5 items-center justify-center rounded-full bg-gray-900 text-white text-[10px] font-bold">SU</span>
          Sleep Upgrade Hub
        </div>
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900 leading-tight mb-3">
          Weekly sleep, monetization, and affiliate winsâ€”in your inbox.
        </h2>
        <p class="text-base text-slate-700 mb-6">
          Join readers leveling up content revenue with SEO, SleepUpgradeHub playbooks, and curated partner offers that keep RPMs strong.
        </p>
        <ul class="space-y-3 text-sm text-slate-700">
          <li class="flex items-start gap-3">
            <span class="mt-0.5 inline-flex h-5 w-5 items-center justify-center rounded-full bg-emerald-100 text-emerald-700">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-3.5 w-3.5">
                <path d="M5 13l4 4L19 7" />
              </svg>
            </span>
            Ad-ready topic drops, affiliate angles, and RPM ideas every week.
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-0.5 inline-flex h-5 w-5 items-center justify-center rounded-full bg-emerald-100 text-emerald-700">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-3.5 w-3.5">
                <path d="M5 13l4 4L19 7" />
              </svg>
            </span>
            High-converting headlines, search prompts, and internal link plays.
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-0.5 inline-flex h-5 w-5 items-center justify-center rounded-full bg-emerald-100 text-emerald-700">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-3.5 w-3.5">
                <path d="M5 13l4 4L19 7" />
              </svg>
            </span>
            Proven CTAs, angles, and layouts inspired by top publishers.
          </li>
        </ul>
      </div>

      <div class="relative bg-white p-8 md:p-10 border-t md:border-l md:border-t-0 border-gray-200">
        <div class="flex items-start justify-between mb-6">
          <div>
            <p class="text-xs uppercase tracking-wide text-slate-500 font-semibold">Newsletter</p>
            <p class="text-lg font-semibold text-slate-900">Stay ahead of sleep + SEO.</p>
          </div>
          <button
            type="button"
            data-newsletter-popup-close
            class="text-slate-400 hover:text-slate-700"
            aria-label="Close newsletter popup"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-5 w-5">
              <path d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <NewsletterForm
          source="popup"
          layoutClass="space-y-4"
          inputPlaceholder="Enter your best email"
          inputClass="px-4 py-3 rounded-lg text-slate-900 bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent shadow-sm"
          buttonClass="w-full px-4 py-3 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition disabled:bg-gray-200 disabled:text-gray-600 disabled:cursor-not-allowed"
          buttonText="Get the playbook"
          redirect="/?subscribed=1"
        />

        <p class="mt-4 text-xs text-slate-600">
          No spam. Just growth tactics and sleep upgrades that keep ads and affiliate revenue rising.
        </p>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  if (typeof window !== 'undefined') {
    const initPopup = () => {
      const popup = /** @type {HTMLElement | null} */ (
        document.querySelector('[data-newsletter-popup]')
      );
      if (!popup) return;

      const storageKey = popup.dataset.popupStorage || 'newsletter_popup_dismissed';
      const closeButton = popup.querySelector('[data-newsletter-popup-close]');
      const overlay = popup.querySelector('[data-popup-overlay]');

      const openPopup = () => {
        if (localStorage.getItem(storageKey)) return;
        popup.classList.remove('hidden');
        popup.classList.add('flex');
        document.body.classList.add('overflow-hidden');
      };

      const closePopup = () => {
        popup.classList.add('hidden');
        popup.classList.remove('flex');
        document.body.classList.remove('overflow-hidden');
        localStorage.setItem(storageKey, '1');
      };

      if (!localStorage.getItem(storageKey)) {
        const delayMs = Number(popup.dataset.popupDelay || '0');
        if (delayMs > 0) {
          window.setTimeout(openPopup, delayMs);
        } else {
          openPopup();
        }
      }

      closeButton?.addEventListener('click', closePopup);
      overlay?.addEventListener('click', closePopup);
      document.addEventListener('keydown', (event) => {
        if (event.key === 'Escape' && !popup.classList.contains('hidden')) {
          closePopup();
        }
      });
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initPopup, { once: true });
    } else {
      initPopup();
    }
  }
</script>
