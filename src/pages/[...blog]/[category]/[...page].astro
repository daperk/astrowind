---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogCategoryRobots, getStaticPathsBlogCategory, getCategoriesWithCounts } from '~/utils/blog';
import { Icon } from 'astro-icon/components';

import Layout from '~/layouts/PageLayout.astro';
import ModernCard from '~/components/blog/ModernCard.astro';
import Sidebar from '~/components/blog/Sidebar.astro';
import Pagination from '~/components/blog/Pagination.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogCategory({ paginate });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths> & { category: Record<string, string> };

const { page, category } = Astro.props as Props;

const currentPage = page.currentPage ?? 1;

// Get categories with real post counts
const topCategories = await getCategoriesWithCounts();

// Get recent posts for sidebar
const popularPosts = page.data.slice(0, 5);

const metadata = {
  title: `${category.title} — Sleep Optimization Guides — SleepUpgradeHub ${currentPage > 1 ? ` (Page ${currentPage})` : ''}`,
  description: `Browse all ${category.title} guides and articles on SleepUpgradeHub. Science-backed sleep optimization strategies to help you sleep better.`,
  robots: {
    index: blogCategoryRobots?.index,
    follow: blogCategoryRobots?.follow,
  },
};
---

<Layout metadata={metadata}>
  <!-- Category Hero -->
  <section class="bg-gradient-to-br from-brand-primary via-brand-primary to-brand-accent-light py-16 md:py-20 lg:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <div class="mb-4 inline-flex items-center gap-2 px-4 py-2 bg-white/20 border border-white/30 rounded-full text-sm font-medium text-white">
          <Icon name="tabler:folder" class="w-4 h-4" />
          Category
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 text-white dark:text-white">
          {category.title}
        </h1>
        <p class="text-lg md:text-xl text-white/90 dark:text-slate-200 max-w-2xl mx-auto">
          {category.title === 'Sleep Environment' && 'Guides and research-backed insights on creating the optimal sleep environment.'}
          {category.title === 'Sleep Tools' && 'Guides and research-backed insights on sleep tools and gadgets.'}
          {category.title === 'Habits & Routines' && 'Guides and research-backed insights on building better sleep habits and routines.'}
          {category.title === 'Supplements' && 'Guides and research-backed insights on sleep supplements and natural aids.'}
          {category.title === 'Sleep Trackers' && 'Guides and research-backed insights on sleep tracking technology.'}
          {category.title === 'White Noise' && 'Guides and research-backed insights on white noise and sound masking for sleep.'}
          {category.title === 'White Noise Machines' && 'Guides and research-backed insights on white noise machines and devices.'}
          {!['Sleep Environment', 'Sleep Tools', 'Habits & Routines', 'Supplements', 'Sleep Trackers', 'White Noise', 'White Noise Machines'].includes(category.title) && `Explore our collection of sleep guides and articles about ${category.title}.`}
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
        <!-- Main Content Area -->
        <div class="lg:col-span-8">
          <!-- Grid of Posts -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
            {page.data.map((post) => (
              <ModernCard post={post} />
            ))}
          </div>

          <!-- Pagination -->
          {(page.url.prev || page.url.next) && (
            <div class="mt-12">
              <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-4">
          <div class="lg:sticky lg:top-24">
            <Sidebar popularPosts={popularPosts} categories={topCategories} />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
