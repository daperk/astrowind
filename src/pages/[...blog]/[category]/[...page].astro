---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogCategoryRobots, getStaticPathsBlogCategory, getCategoriesWithCounts } from '~/utils/blog';
import { Icon } from 'astro-icon/components';

import Layout from '~/layouts/PageLayout.astro';
import ModernCard from '~/components/blog/ModernCard.astro';
import Sidebar from '~/components/blog/Sidebar.astro';
import Pagination from '~/components/blog/Pagination.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogCategory({ paginate });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths> & { category: Record<string, string> };

const { page, category } = Astro.props as Props;

const currentPage = page.currentPage ?? 1;

// Get categories with real post counts
const categoriesWithCounts = await getCategoriesWithCounts();

// Get recent posts for sidebar
const popularPosts = page.data.slice(0, 5);

// Generate category-specific description
const categoryDescriptions: Record<string, string> = {
  'sleep-environment': 'Optimize your bedroom with expert guides on light control, temperature, noise management, and air quality for better sleep.',
  'sleep-tools': 'Reviews and guides on the best sleep masks, trackers, white noise machines, and gadgets that actually improve sleep quality.',
  'habits': 'Build sustainable wind-down routines and sleep hygiene practices backed by science and real-world results.',
  'supplements': 'Evidence-based information on magnesium, L-theanine, melatonin, and natural sleep aids that actually work.',
  'sleep-trackers': 'In-depth reviews and comparisons of Oura Ring, WHOOP, Garmin, and other sleep tracking devices.',
  'white-noise': 'Expert reviews of white noise machines, pink noise generators, and sound masking solutions for better sleep.',
};

const categoryDescription = categoryDescriptions[category.slug] || `Guides and research-backed insights on ${category.title}.`;

const metadata = {
  title: `${category.title} — Sleep Optimization Guides — SleepUpgradeHub ${currentPage > 1 ? ` (Page ${currentPage})` : ''}`,
  description: categoryDescription,
  robots: {
    index: blogCategoryRobots?.index,
    follow: blogCategoryRobots?.follow,
  },
};
---

<Layout metadata={metadata}>
  <!-- Category Hero - Light Background with Dark Text -->
  <section class="bg-white border-b border-gray-200 py-16 md:py-20 lg:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <div class="mb-4 inline-flex items-center gap-2 px-4 py-2 bg-brand-accent/10 rounded-full text-sm font-medium text-brand-accent">
          <Icon name="tabler:folder" class="w-4 h-4" />
          Category
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 text-gray-900">
          {category.title}
        </h1>
        <p class="text-lg md:text-xl text-gray-700 max-w-2xl mx-auto">
          {categoryDescription}
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
        <!-- Main Content Area -->
        <div class="lg:col-span-8">
          <!-- Grid of Posts -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
            {page.data.map((post) => (
              <ModernCard post={post} />
            ))}
          </div>

          <!-- Pagination -->
          {(page.url.prev || page.url.next) && (
            <div class="mt-12">
              <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-4">
          <div class="lg:sticky lg:top-24">
            <Sidebar popularPosts={popularPosts} categories={categoriesWithCounts} />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
